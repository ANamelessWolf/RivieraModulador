<UserControl x:Class="DaSoft.Riviera.Modulador.Core.UI.Items.PanelItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DaSoft.Riviera.Modulador.Core.UI.Items"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Assets/RivieraStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="panelArea" Background="#7FE4F5FB" MouseLeftButtonUp="panelArea_MouseLeftButtonUp" >
        <Border BorderThickness="1,1,1,0" BorderBrush="Gray" />
        <TextBlock x:Name="codePanel" Text="CODE GO HERE" Style="{StaticResource PanelCodeStyle_Header}" />
    </Grid>
</UserControl>
